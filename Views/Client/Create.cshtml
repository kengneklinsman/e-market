@model Emarketing.ViewModels.ClientSignUpViewModel

@{
    Layout = null;
}

<style>
    /* Your styling here */
</style>

<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<script src="js/bootstrap.min.js"></script>
<script src="http://code.jquery.com/jquery.js"></script>

<div id="main-div">
    <div id="box" class="img-responsive">
        @using (Html.BeginForm("SignUp", "Client", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="insidebox">
                <div><h1>Sign Up</h1></div>

                <div class="form-group">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @placeholder = "Name" })
                    @Html.ValidationMessageFor(m => m.Name)
                </div>

                <div class="form-group">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email" })
                    @Html.ValidationMessageFor(m => m.Email)
                </div>

                <div class="form-group">
                    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", @placeholder = "Phone" })
                    @Html.ValidationMessageFor(m => m.Phone)
                </div>

                <div class="form-group">
                    <input type="submit" value="Sign Up" class="btn btn-success btn-block" />
                </div>

                <div class="form-group">
                    <p style="color:red">@ViewBag.error</p>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
